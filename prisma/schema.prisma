// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  openaiApiKey  String?

  // Profile Info
  bio           String?
  website       String?
  instagram     String?
  tiktok        String?
  youtube       String?
  twitter       String?

  accounts      Account[]
  sessions      Session[]
  products      Product[]
  campaigns     Campaign[]
  creatives     Creative[]
  integrations  Integration[]
  posts         Post[]
  notifications Notification[]
  
  // Gamification
  xp            Int       @default(0)
  level         Int       @default(1)
  badges        String[]  // Array of badge IDs

  // Bio Page
  bioPage       BioPage?
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id            String   @id @default(cuid())
  title         String
  price         String
  commission    String
  platform      String
  imageUrl      String?
  affiliateLink String?
  
  // Location Targeting
  targetCountry String?
  targetState   String?
  targetCity    String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Campaign {
  id          String   @id @default(cuid())
  title       String
  platform    String
  status      String   @default("paused") // active, paused, ended
  clicks      Int      @default(0)
  conversions Int      @default(0)
  spent       Float    @default(0.0)
  revenue     Float    @default(0.0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Creative {
  id          String   @id @default(cuid())
  headline    String
  description String
  cta         String
  imageUrl    String?
  format      String?  // feed, story, banner
  
  // Video Support
  type        String   @default("image") // "image", "video"
  script      String?  // For video scripts
  templateId  String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Integration {
  id            String   @id @default(cuid())
  name          String   // e.g. "Minha conta Amazon US"
  platform      String   // e.g. "amazon", "hotmart"
  apiKey        String?
  accountId     String?
  
  // Location Targeting
  targetCountry String?
  targetState   String?
  targetCity    String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Post {
  id           String    @id @default(cuid())
  content      String
  imageUrl     String?
  platforms    String[]  // ["instagram", "tiktok", "youtube", "pinterest"]
  status       String    @default("draft") // "draft", "scheduled", "published", "failed"
  scheduledFor DateTime?
  publishedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String   // "sale", "product", "post", "error", "info"
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
model BioPage {
  id          String    @id @default(cuid())
  username    String    @unique // URL slug
  displayName String?
  bio         String?
  avatarUrl   String?
  theme       String    @default("default") // "dark", "light", "gradient", "custom"
  views       Int       @default(0)
  
  userId      String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  links       BioLink[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model BioLink {
  id          String   @id @default(cuid())
  title       String
  url         String
  icon        String?  // "instagram", "youtube", "link"
  order       Int      @default(0)
  clicks      Int      @default(0)
  active      Boolean  @default(true)
  
  bioPageId   String
  bioPage     BioPage  @relation(fields: [bioPageId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

